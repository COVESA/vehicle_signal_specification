#
# Resources attributes and signals
#

Power:
  datatype: float
  type: sensor
  unit: W
  description: Power consumption

Temperature:
  datatype: float
  type: sensor
  unit: celsius
  description: Instance temperature

Utilization:
  type: branch
  description: Resources utilization branch

Utilization.CPU:
  datatype: float
  type: sensor
  unit: percent
  min: 0
  max: 100
  description: CPU utilization

Utilization.Memory:
  datatype: float
  type: sensor
  unit: percent
  min: 0
  max: 100
  description: Memory utilization
